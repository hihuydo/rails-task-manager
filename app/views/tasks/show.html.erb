<h1 class="mb-5"><%= @task.title %></h1>

<div class="mb-2">
  <div class="p-2 bg-light border w-50"><%= @task.details %></div>
</div>


<div class="form-check mb-3">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
  <label class="form-check-label" for="flexCheckDefault">
    <%= @status %>
  </label>
</div>

<div class="mb-5"><%= link_to 'Edit this task', edit_task_path  %></div>


<div><%= link_to 'Back to list', tasks_path  %></div>

